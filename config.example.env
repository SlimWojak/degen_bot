# Degen God v2 Environment Configuration
# Copy this file to .env and update with your actual values

# ===== Hyperliquid =====
HL_NETWORK=mainnet
HL_ACCOUNT_ADDRESS=0xYourMainAccountAddress
HL_PRIVATE_KEY=0xYourApiWalletPrivateKey   # NEVER commit a real key

# Defaults for sanity trade
HL_SYMBOL=ETH
HL_NOTIONAL_USD=15
HL_EXIT_AFTER_SECONDS=5

# Live data configuration
DATA_SOURCE=mock
STATE_CACHE_MS=800
HL_DEFAULT_SYMBOL=ETH

# Trading configuration
HL_TRADING_ENABLED=true
HL_MAX_NOTIONAL_USD=50
HL_MAX_CROSS_BPS=200

# Status check timeouts
STATUS_TIMEOUT_MS=400
STATUS_TOTAL_TIMEOUT_MS=900

# DeepSeek AI Agent
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_TIMEOUT_MS=5000
AGENT_DECISION_COOLDOWN_MS=1500

# Legacy compatibility
HL_ENV=mainnet
HL_API_WALLET_ADDRESS=0xYourApiWalletAddress

# Hyperliquid endpoints
HL_REST_MAIN=https://api.hyperliquid.xyz
HL_WS_MAIN=wss://api.hyperliquid.xyz/ws

# ==== DeepSeek ====
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
DEEPSEEK_MODEL=deepseek-chat

# ==== Bot Settings ====
ASSETS=HYPE,BTC,SOL,BNB,ETH
START_CAPITAL=5000
MIN_SCORE=80
MAX_LEVERAGE=5
DAILY_DRAWDOWN_LIMIT=0.10
POSITION_RISK=0.02
DB_PATH=./data/degen.sqlite

# DeepSeek Rate Limiting (seconds between calls)
DEEPSEEK_RATE_LIMIT=30

# High-Edge Indicator Thresholds
WHALE_VOLUME_THRESHOLD=2.0
FUNDING_THRESHOLD=0.0003

# Paths
MEMORY_PATH=memory
PLOTS_PATH=plots